<%= form_for(@rua) do |f| %>
  <div id="conteudo-form" class="panel-body">
  <% if @rua.errors.any? %>
    <div id="error_explanation">
        <h4 class="text-center"> Preencha todos os campos corretamente: </h4>
        <div class="alert alert-danger">
          <% @onibus.errors.full_messages.each do |msg| %>
            <%= msg %><br>
          <% end %>
    </div>
    <% end %>
    <br>
    <div class="form-group">
      <%= f.label :nome, class: "control-label" %>
      <%= f.text_field :nome, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :route_id, class: "control-label" %><br>
      <%= f.collection_select :route_id, Linha.all, :id, :descricao, {:include_blank => "Selecione uma Rota"}, {class: "form-inline form-control"} %>
    </div>
    <div id="conteudo-form" class="actions text-center"><br>
      <div class="btn-group">
        <%= f.submit 'Salvar', :class => 'btn btn-success' %>
      </div>
      <%= link_to 'Voltar', ruas_path, :class => 'btn btn-warning', :method => :get %>
    </div>
  </div>
<% end %>
