<%= form_for(@linha) do |f| %>
  <div id="conteudo-form" class="panel-body">
    <% if @linha.errors.any? %>
      <div id="error_explanation">
        <h4 class="text-center"> Preencha todos os campos corretamente: </h4>
        <div class="alert alert-danger">
          <% @linha.errors.full_messages.each do |msg| %>
            <%= msg %><br>
          <% end %>
        </div>
      </div>
    <% end %>
  <br>
    <div class="form-group">
      <%= f.label :numero, class: "control-label" %>
      <%= f.number_field :numero, :placeholder => "Ex.: 12", class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :descricao, class: "control-label" %>
    <%= f.text_field :descricao, :placeholder => "Ex.: Jardim SÃ£o Paulo", :maxlength => 200, class: "form-control" %>
    </div>
      <div id="conteudo-form" class="actions text-center"><br>
        <div class="btn-group">
          <%= f.submit 'Salvar', :class => 'btn btn-success' %>
        </div>
        <%= link_to 'Voltar', linhas_path, :class => 'btn btn-warning', :method => :get %>
      </div>
  </div>
<% end %>