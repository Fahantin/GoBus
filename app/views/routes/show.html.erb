<div class="row">
    <div class="col-lg-12">
      <br>
        <h1 class="page-header">
          GoBus <small>- Seu tempo em suas mãos</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-home"></i>  Painel de Controle
          </li>
        </ol>
    </div>
  </div>

 <div class="row">
    <div class="col-lg-12">
      	<div class="panel panel-default">
        	<div class="panel-heading">
          		<h3 class="panel-title"><i class="fa fa-fw fa-map-marker"></i> Rota</h3>
        	</div>
        	<div id="conteudo-form" class="text-center panel-body">
				<p>
				  <strong>Linha:</strong>
				  <%= @route.linha.descricao %>
				</p>
        <p>
          <strong>Itinerario:</strong><br>
          <% @route.ruas.each do |rua| %>
            <%= "#{rua.nome}" %><br>
          <% end %>
        </p>
				<%= link_to 'Editar', edit_route_path(@route), :class => "btn btn-success", :method => :get  %>
				<%= link_to 'Voltar', route_path, :class => "btn btn-warning", :method => :get  %>
        </div>
    	</div>
    </div>
</div>
<div id="map"></div>
    <div id="right-panel">
    <div>
    <b>Início:</b>
    <select id="start">
      <option value="Av. São Luís, Marília, SP">Av. São Luís</option>
      <option value="Av. Men de Sá, Marília, SP">Av. Mem de Sá</option>
      <option value="Rua Yukio Fuzii, Marília, SP">Rua Yukio Fuziy</option>
      <option value="Av. Higino Muzi Filho, Marília, SP">Av. Higino Muzzi Filho</option>
    </select>
    <br>
    <b>Rota:</b> <br>
    <i>(Ctrl-Click for multiple selection)</i> <br>
    <select id="waypoints">
      <option value="Av. São Luís, Marília, SP">Av. São Luís</option>
      <option value="Av. Men de Sá, Marília, SP">Av. Mem de Sá</option>
      <option value="Rua Yukio Fuzii, Marília, SP">Rua Yukio Fuziy</option>
      <option value="Av. Higino Muzi Filho, Marília, SP">Av. Higino Muzzi Filho</option>
    </select>
    <%= collection_select :rua, :route_id, Rua.all, :id, :nome, :id => "waypoints" %>
    <br>
    <b>Fim:</b>
    <select id="end">
      <option value="Av. São Luís, Marília, SP">Av. São Luís</option>
      <option value="Av. Men de Sá, Marília, SP">Av. Mem de Sá</option>
      <option value="Rua Yukio Fuzii, Marília, SP">Rua Yukio Fuziy</option>
      <option value="Av. Higino Muzi Filho, Marília, SP">Av. Higino Muzzi Filho</option>
    </select>
    <br>
      <input type="submit" id="submit">
    </div>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBd5M-a0I27FeKt04_E-yaPZpMIplQEqV0&signed_in=true&callback=initMap"
        async defer></script>