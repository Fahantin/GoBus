  <div class="row">
    <div class="col-lg-12">
      <br>
        <h1 class="page-header">
          GoBus <small>- Seu tempo em suas m√£os</small>
        </h1>
        <ol class="breadcrumb">
          <li class="active">
            <i class="fa fa-home"></i>  Painel de Controle
          </li>
        </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-fw fa-map-marker"></i> Rotas</h3>
        </div>
        <div class="panel-body table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Linha</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @routes.each do |route| %>
                <tr>
                  <td><%= route.linha.descricao %></td>
                  <td><%= button_to 'Mostrar', route, :class => "btn btn-success", :method => :get %></td>
                  <td><%= button_to 'Editar', edit_route_path(route), :class => "btn btn-success", :method => :get %></td>
                  <td><%= button_to 'Deletar', route, :class => "btn btn-danger" ,method: :delete %></td>
                </tr>
              <% end %>
             </tbody>
          </table>
          <br>
          <div>
            <%= button_to 'Nova Rota', new_route_path, :class => "btn btn-primary center-block", :method => :get %>
          </div>
        </div>
      </div>
    </div>

  </div>