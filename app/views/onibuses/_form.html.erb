<%= form_for(@onibus) do |f| %>
  <div id="conteudo-form" class="panel-body">
    <% if @onibus.errors.any? %>
      <div id="error_explanation">
        <h4 class="text-center"> Preencha todos os campos corretamente: </h4>
        <div class="alert alert-danger">
          <% @onibus.errors.full_messages.each do |msg| %>
            <%= msg %><br>
          <% end %>
        </div>
      </div>
    <% end %>
  <br>
    <div class="form-group">
      <%= f.label :placa, class: "control-label" %>
      <%= f.text_field :placa, :placeholder => "Ex.: ABC1234", :maxlength => 7, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
    <%= f.label :ativo, class: "control-label" %>
    <%= f.check_box :ativo, class: "checkbox-inline" %>
    </div>
    <div class="form-group">
      <%= f.label :linha_id %>
      <%= f.collection_select :linha_id, Linha.all, :id, :descricao, {:include_blank => "Selecione uma Linha"}, {class: "form-inline form-control"} %>
    </div>
      <div id="conteudo-form" class="actions text-center"><br>
        <div class="btn-group">
          <%= f.submit 'Salvar', :class => 'btn btn-success' %>
        </div>
        <%= link_to 'Voltar', onibuses_path, :class => 'btn btn-warning', :method => :get %>
      </div>
  </div>
<% end %>